{
    "presets": [
        "module:@react-native/babel-preset"
    ],
    "plugins": [
        [
            "babel-plugin-module-resolver",
            {
                "extensions": [
                    ".ios.js",
                    ".android.js",
                    ".js",
                    ".ts",
                    ".tsx",
                    ".json"
                ],
                "root": [
                    "./src"
                ],
                "alias": {
                    "@features": "./src/features",
                    "@models": "./src/models",
                    "@redux": "./src/redux",
                    "@common": "./src/common",
                    "@services": "./src/services",
                    "@mock": "./src/mock"
                }
            }
        ]
    ]
}